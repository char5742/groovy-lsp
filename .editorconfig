# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# Groovy files
[*.groovy]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# Gradle files
[*.gradle]
indent_size = 4
continuation_indent_size = 8

# Kotlin DSL files
[*.gradle.kts]
indent_size = 4
continuation_indent_size = 8

# XML files
[*.xml]
indent_size = 2
continuation_indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Properties files
[*.properties]
charset = latin1

# Shell scripts
[*.sh]
indent_size = 2

# Batch files
[*.{cmd,bat}]
end_of_line = crlf
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# TypeScript/JavaScript files (for potential future web UI)
[*.{ts,tsx,js,jsx}]
indent_size = 2
max_line_length = 100

# package.json special handling
[package.json]
indent_size = 2

# Makefiles must use tabs
[Makefile]
indent_style = tab

# Module info files
[module-info.java]
max_line_length = 80